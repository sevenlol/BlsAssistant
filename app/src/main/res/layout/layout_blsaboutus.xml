<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/aboutus_icon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/aboutus_company_chinese"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="史迪索股份有限公司"
            android:fontFamily="DFKai-SB"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/aboutus_company_english"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Stethoscope Inc."
            android:fontFamily="san-serif"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/aboutus_thanks"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/aboutus_thank"
            android:fontFamily="DFKai-SB"
            android:textStyle=""
            android:textSize="20sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/aboutus_ratethisapp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/aboutus_ratethisapp"
            android:fontFamily="DFKai-SB"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">
                <ImageButton
                    android:id="@+id/aboutus_fb"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="centerCrop"
                    android:src="@drawable/fb_icon"/>
                <ImageButton
                    android:id="@+id/aboutus_website"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="centerCrop"
                    android:src="@drawable/web_icon"/>
                <ImageButton
                    android:id="@+id/aboutus_google_plus"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gplus_icon"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:background="?android:attr/dividerVertical"/>

        <Button
            android:id="@+id/home_button_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="DFKai-SB"
            android:textSize="20sp"
            android:background="@null"
            android:text="急救常識 一 幫助您"/>
    </LinearLayout>

</RelativeLayout>
